<Window x:Class="WpfApplicationLuhn.FixFileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FixFileWindow" Height="300" Width="359">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="224*"></RowDefinition>
            <RowDefinition Height="37*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TextBox TextWrapping="Wrap" AcceptsReturn="True" MinHeight="219"  Margin="5,5,5,0" Name="fixTextBox" VerticalAlignment="Top" MinWidth="313" ScrollViewer.VerticalScrollBarVisibility="Auto"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"/>
        <StackPanel Orientation="Horizontal" Margin="2,2,2,2" Grid.Row="1">
        <Button Content="Save" Height="29" Margin="2" Name="saveButton" Width="75" Click="saveButton_Click" />
        </StackPanel>
    </Grid>
</Window>
