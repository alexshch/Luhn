<Window x:Class="WpfApplicationLuhn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Luhn Algorithm" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="262*"></RowDefinition>
            <RowDefinition Height="43*"></RowDefinition>
            <RowDefinition Height="6*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
  
        </Grid.ColumnDefinitions>
            <TextBox Margin="5,5,5,0" Name="outText" VerticalAlignment="Top"  ScrollViewer.VerticalScrollBarVisibility="Auto"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto" MinHeight="257"  />

        <StackPanel Orientation="Horizontal" Margin="2,2,2,2" Grid.Row="1">
            <Button Content="Open file"  Height="23" Margin="2" Name="openFileButton" Width="102" Click="openFileButton_Click" />
                <Button Content="Set output file" Height="23" Margin="2" Name="setOutputPathButton" Width="102" Click="setOutputPathButton_Click" />
                <Button Content="Fix File" Height="23" Margin="2" Name="fixFileButton" Width="102" Click="fixFileButton_Click" />
        </StackPanel>

    </Grid>
</Window>
